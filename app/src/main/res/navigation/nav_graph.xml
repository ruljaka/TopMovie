<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/trendingFragment">

    <fragment
        android:id="@+id/trendingFragment"
        android:name="com.ruslangrigoriev.topmovie.ui.HomeFragment"
        android:label="trending"
        tools:layout="@layout/home_fragment">
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_trendingFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.ruslangrigoriev.topmovie.ui.DetailsFragment"
        android:label="details"
        tools:layout="@layout/details_fragment" >
        <action
            android:id="@+id/action_detailsFragment_to_personFragment"
            app:destination="@id/personFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.ruslangrigoriev.topmovie.ui.SearchFragment"
        android:label="search"
        tools:layout="@layout/search_fragment">
        <action
            android:id="@+id/action_searchFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/personFragment"
        android:name="com.ruslangrigoriev.topmovie.ui.PersonFragment"
        android:label="person"
        tools:layout="@layout/person_fragment" >
        <action
            android:id="@+id/action_personFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
</navigation>