<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="2000">
        <KeyFrameSet>
            <KeyAttribute
                android:translationX="-300dp"
                motion:framePosition="0"
                motion:motionTarget="@id/textView_splash_label" />
            <KeyAttribute
                android:translationX="30dp"
                motion:framePosition="50"
                motion:motionTarget="@+id/textView_splash_label" />
            <KeyAttribute
                android:translationX="0dp"
                motion:framePosition="70"
                motion:motionTarget="@+id/textView_splash_label" />


            <KeyAttribute
                android:translationX="300dp"
                motion:framePosition="0"
                motion:motionTarget="@id/imageView_splash_logo" />
            <KeyAttribute
                android:translationX="-30dp"
                motion:framePosition="50"
                motion:motionTarget="@+id/imageView_splash_logo" />
            <KeyAttribute
                android:translationX="0dp"
                motion:framePosition="70"
                motion:motionTarget="@+id/imageView_splash_logo" />

            <KeyAttribute
                android:alpha="0"
                motion:framePosition="0"
                motion:motionTarget="@+id/imageView_splash_oval_1" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="60"
                motion:motionTarget="@+id/imageView_splash_oval_1" />
            <KeyAttribute
                android:alpha="1.0"
                motion:framePosition="80"
                motion:motionTarget="@+id/imageView_splash_oval_1" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="0"
                motion:motionTarget="@+id/imageView_splash_oval_2" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="70"
                motion:motionTarget="@+id/imageView_splash_oval_2" />
            <KeyAttribute
                android:alpha="1.0"
                motion:framePosition="90"
                motion:motionTarget="@+id/imageView_splash_oval_2" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="0"
                motion:motionTarget="@+id/imageView_splash_oval_3" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="80"
                motion:motionTarget="@+id/imageView_splash_oval_3" />
            <KeyAttribute
                android:alpha="1.0"
                motion:framePosition="99"
                motion:motionTarget="@+id/imageView_splash_oval_3" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start"></ConstraintSet>

    <ConstraintSet android:id="@+id/end"></ConstraintSet>
</MotionScene>