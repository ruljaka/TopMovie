<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TopMovie" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#34000000</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:button">@color/white</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="Theme.TopMovie.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainTextStyle" parent="Theme.TopMovie">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="OverviewStyle" parent="Theme.TopMovie">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TitleTextStyle" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">26sp</item>
    </style>


    <style name="Theme.TopMovie.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
    </style>

    <style name="Theme.TopMovie.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>