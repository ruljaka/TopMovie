<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="225dp"
    android:backgroundTint="@color/white"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"

        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView_cast"
            android:layout_width="100dp"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/cast"
            android:contentDescription="@string/cast_poster_desc" />

        <TextView
            android:id="@+id/textView_cast_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text=""
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/imageView_cast"
            app:layout_constraintStart_toStartOf="@+id/imageView_cast"
            app:layout_constraintTop_toBottomOf="@+id/imageView_cast"
            tools:text="textView_cast_name" />

        <TextView
            android:id="@+id/textView_cast_character"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/textView_cast_name"
            app:layout_constraintStart_toStartOf="@+id/textView_cast_name"
            app:layout_constraintTop_toBottomOf="@+id/textView_cast_name"
            tools:text="textView_character" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>